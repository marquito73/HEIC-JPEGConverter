<Window x:Class="HEIC_JPEGConverter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HEIC_JPEGConverter"
        mc:Ignorable="d"
        Title="MainWindow" Height="100" Width="500"
        ResizeMode="NoResize" Closing="Window_Closing">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
        </Grid.RowDefinitions>

        <Button Content="Convert" Click="Button_Click" Grid.Column="0" Grid.Row="0" Margin="5" Height="25" VerticalAlignment="Center"/>

        <ProgressBar Name="PbConversion" Grid.Column="1" Grid.Row="0" Margin="5" Height="45"/>

        <TextBlock Name="LblProgress" Grid.Column="1" Grid.Row="0" Margin="5" TextAlignment="Center" VerticalAlignment="Center"/>

    </Grid>
</Window>
